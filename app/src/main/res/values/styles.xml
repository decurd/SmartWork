    <style name="TextSNSMangeBig">
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextSNSGroupSpinner">
        <item name="android:textColor">@color/text_color_dark_grey</item>
