    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plan_ttl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            style="@style/TextSNSMangeBig"
            android:drawableLeft="@drawable/ic_manage_plan"
            android:text="@string/plan"/>

        <LinearLayout
            android:id="@+id/ll_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:layout_marginLeft="@dimen/sns_manager_layout_margin" android:background="@color/line_color_list_divider"/>

    </LinearLayout>


    <RelativeLayout android:id="@+id/rl_file"
        android:layout_width="match_parent"
        android:layout_height="47dp"
